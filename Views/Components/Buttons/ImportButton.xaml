<UserControl x:Class="CapnoAnalyzer.Views.Components.Buttons.ImportButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:faWPF="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
             mc:Ignorable="d">

    <Button Padding="3"
            Margin="5"
            FontSize="18"
            Height="60" 
            Width="140"
            BorderBrush="Transparent"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Command="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}" 
            CommandParameter="{Binding CommandParameter, RelativeSource={RelativeSource AncestorType=UserControl}}">

        <!-- Style tanımı -->
        <Button.Style>
            <Style TargetType="Button">
                <!-- Varsayılan Arka Plan ve Yazı Rengi (Mavi tonu) -->
                <Setter Property="Background" Value="#8293D4"/>
                <Setter Property="Foreground" Value="White"/>

                <!-- Mouse üzerine geldiğinde renk değişimi -->
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#6A7EC2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Button.Style>

        <!-- Efekt için Transform Ekleme -->
        <Button.RenderTransform>
            <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1" />
        </Button.RenderTransform>

        <Button.Triggers>
            <!-- Mouse üzerine geldiğinde büyüt -->
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleX" To="1.05" Duration="0:0:0.2" />
                        <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleY" To="1.05" Duration="0:0:0.2" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <!-- Mouse çıktığında eski haline getir -->
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.2" />
                        <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.2" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Button.Triggers>

        <!-- Button Şablonu -->
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" RenderTransformOrigin="0.5,0.5">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <!-- FontAwesome Icon (Upload ikonu) -->
                        <faWPF:FontAwesome Icon="Download" Foreground="{Binding ButtonForeground, RelativeSource={RelativeSource AncestorType=UserControl}}" Width="50" Height="50" FontSize="26" FontWeight="Bold" Margin="0,15,5,0"/>
                        <!-- Buton Metni -->
                        <TextBlock Text="{Binding ButtonContent, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Button.Template>
    </Button>
</UserControl>