<UserControl x:Class="CapnoAnalyzer.Views.DevicesViews.DevicesControl.DeviceCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CapnoAnalyzer.Views.DevicesViews.DevicesControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#F1F3FA" Width="300" Height="150" Margin="10" CornerRadius="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding PortName}" Foreground="#2E3B4E" FontSize="16" FontWeight="Bold" />
            <TextBlock Text="{Binding Properties.ProductId}" Foreground="#4CAF50" FontSize="36" FontWeight="Bold" />
            <TextBlock Text="{Binding DeviceStatus}" Foreground="#5C6D8C" FontSize="12" />
        </StackPanel>
    </Border>
</UserControl>
