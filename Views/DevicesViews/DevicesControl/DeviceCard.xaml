<UserControl x:Class="CapnoAnalyzer.Views.DevicesViews.DevicesControl.DeviceCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CapnoAnalyzer.Views.DevicesViews.DevicesControl"           
             xmlns:plot="clr-namespace:CapnoAnalyzer.Views.DevicesViews.PlotViews"  
             xmlns:helpers="clr-namespace:CapnoAnalyzer.Helpers"         
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d">

    <UserControl.Resources>
        <helpers:ProgressWidthConverter x:Key="ProgressWidthConverter" />
    </UserControl.Resources>

    <Grid Width="1080" Margin="5 0 0 0">
        <!-- Ana Kart -->
        <Border Background="#F1F3FA" CornerRadius="10" Padding="0" BorderBrush="#D1D5DB" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="340" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="350" />
                </Grid.ColumnDefinitions>

                <!-- Üst Bilgi (Cihaz Kimliği ve Durumu) -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0 0">
                    <Border Background="#F1F3FA" Margin="0 2 0 0" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10 0 0 0">
                                    <TextBlock Text="Port:" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold" Margin="0" />
                                    <TextBlock Text="{Binding Properties.PortName}" Foreground="#2E3B4E" FontSize="12" FontWeight="Bold" Margin="5 2 0 0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10 0 0 0" VerticalAlignment="Center">
                                    <TextBlock Text="ID:" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold" Margin="0 0 0 0" />
                                    <TextBlock Text="{Binding Properties.ProductId}" Foreground="#2E3B4E" FontSize="12" FontWeight="Bold" Margin="5 2 0 0" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5 0 0 0">
                                    <TextBlock Text="Baud Rate:" Foreground="#5C6D8C" FontSize="12" Margin="5 0 0 0" />
                                    <TextBlock Text="{Binding Properties.BaudRate}" Foreground="#5C6D8C" FontSize="11" Margin="5 2 0 0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5 0 0 0">
                                    <TextBlock Text="Cihaz Durumu:" Foreground="#5C6D8C" FontSize="12" Margin="5 0 0 0" />
                                    <TextBlock Text="{Binding Properties.Status}" Foreground="#5C6D8C" FontSize="11" Margin="5 2 0 0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5 0 0 0">
                                    <TextBlock Text="Veri Paketi Modu:" Foreground="#5C6D8C" FontSize="12" Margin="5 0 0 0" />
                                    <TextBlock Text="{Binding Properties.DataPacketType}" Foreground="#5C6D8C" FontSize="11" Margin="5 2 0 0" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Sol Panel (Sensör Verileri) -->
                <StackPanel Grid.Row="1" Grid.RowSpan="4" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <!-- Zaman -->
                    <Border Background="#F1F3FA" Height="80" Margin="2" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                            <TextBlock Text="Zaman" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold" />
                            <TextBlock Text="{Binding Interface.Data.Time, StringFormat={}{0:F3}}" Foreground="#0078D7" FontSize="16" FontWeight="Bold" />
                            <TextBlock Text="sn" Foreground="#5C6D8C" FontSize="12" />
                        </StackPanel>
                    </Border>

                    <!-- Gaz Sensörü -->
                    <Border Background="#F1F3FA" Height="90" Margin="2" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                            <TextBlock Text="Gaz Sensörü" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold" />
                            <TextBlock Text="{Binding Interface.Data.GasSensor, StringFormat={}{0:F3}}" Foreground="#4CAF50" FontSize="16" FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0">
                                <TextBlock Text="Band: " Foreground="#5C6D8C" FontSize="11" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Interface.Data.GasSensorBandValue, StringFormat={}{0:F3}}" Foreground="#4CAF50" FontSize="11" FontWeight="Bold" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0">
                                <TextBlock Text="Max: " Foreground="#5C6D8C" FontSize="11" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Interface.Data.GasSensorMaxValue, StringFormat={}{0:F3}}" Foreground="#4CAF50" FontSize="11" FontWeight="Bold" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0">
                                <TextBlock Text="Min: " Foreground="#5C6D8C" FontSize="11" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Interface.Data.GasSensorMinValue, StringFormat={}{0:F3}}" Foreground="#4CAF50" FontSize="11" FontWeight="Bold" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Referans Sensörü -->
                    <Border Background="#F1F3FA" Height="90" Margin="2" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                            <TextBlock Text="Referans Sensör" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold" />
                            <TextBlock Text="{Binding Interface.Data.ReferenceSensor, StringFormat={}{0:F3}}" Foreground="#FF5722" FontSize="16" FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0">
                                <TextBlock Text="Band: " Foreground="#5C6D8C" FontSize="11" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Interface.Data.ReferenceSensorBandValue, StringFormat={}{0:F3}}" Foreground="#FF5722" FontSize="11" FontWeight="Bold" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0">
                                <TextBlock Text="Max: " Foreground="#5C6D8C" FontSize="11" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Interface.Data.ReferenceSensorMaxValue, StringFormat={}{0:F3}}" Foreground="#FF5722" FontSize="11" FontWeight="Bold" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0">
                                <TextBlock Text="Min: " Foreground="#5C6D8C" FontSize="11" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Interface.Data.ReferenceSensorMinValue, StringFormat={}{0:F3}}" Foreground="#FF5722" FontSize="11" FontWeight="Bold" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border Background="#F1F3FA" Height="79" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                            <TextBlock Text="Ortam Sensörleri" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Basınç" Foreground="#5C6D8C" FontSize="12" Width="40" Margin="0 0 5 0"/>
                                <TextBlock Text="{Binding Interface.Data.Pressure, StringFormat={}{0:F3}}" Foreground="#FF231F1F" FontSize="12" Width="60" FontWeight="Bold" />
                                <TextBlock Text="hPa" Foreground="#5C6D8C" FontSize="12" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Sıcaklık" Foreground="#5C6D8C" FontSize="12" Width="40" Margin="0 0 5 0"/>
                                <TextBlock Text="{Binding Interface.Data.Temperature, StringFormat={}{0:F3}}" Foreground="#FF231F1F" FontSize="12" Width="60" FontWeight="Bold" />
                                <TextBlock Text="°C" Foreground="#5C6D8C" FontSize="12" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Nem " Foreground="#5C6D8C" FontSize="12" Width="40" Margin="0 0 5 0"/>
                                <TextBlock Text="{Binding Interface.Data.Humidity, StringFormat={}{0:F3}}" Foreground="#FF231F1F" FontSize="12" Width="60" FontWeight="Bold" />
                                <TextBlock Text="%" Foreground="#5C6D8C" FontSize="12" />
                            </StackPanel>
                        </StackPanel>
                    </Border>


                    <!-- Ortam Sensörleri -->
                </StackPanel>

                <!-- Veri Örnekleme Ayarları -->
                <Border  Grid.Row="3" Grid.Column="0" Background="#F1F3FA" Margin="0 50 0 0" VerticalAlignment="Top" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                        <TextBlock Text="Örnekleme Ayarları" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Sample Time " Foreground="#2E3B4E" VerticalAlignment="Center" FontSize="11" FontWeight="Bold"  Width="75" Margin="0 0 5 0"/>
                                    <TextBox x:Name="SampleTime"  IsEnabled="{Binding Interface.IsInputEnabled}"
                                              Text="{Binding Interface.SampleTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                              Foreground="#FF231F1F" FontSize="12" Width="50" 
                                              FontWeight="Bold" TextChanged="SampleTime_TextChanged"/>
                                    <TextBlock Text=" sn" Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                                    <TextBlock Text="Sample Mode " Foreground="#2E3B4E" FontSize="11" VerticalAlignment="Center" FontWeight="Bold" Width="75" Margin="0 0 5 0"/>
                                    <ComboBox ItemsSource="{Binding Interface.SampleModes}" 
                                      SelectedValue="{Binding Interface.SampleMode, UpdateSourceTrigger=PropertyChanged}" 
                                      Foreground="#FF231F1F" FontSize="12" Width="70" FontWeight="Bold" />
                                </StackPanel>
                            </StackPanel>

                            <ProgressBar Grid.Row="1" Grid.Column="0" Height="12" Width="150" Margin="0 10 0 0" Value="{Binding Interface.SampleTimeProgressBar, Mode=OneWay}" Minimum="0" Maximum="100">
                                <ProgressBar.Template>
                                    <ControlTemplate TargetType="ProgressBar">
                                        <Grid>
                                            <!-- Arka plan -->
                                            <Border CornerRadius="6" Background="#FFE5EAF5" />

                                            <!-- İlerleme çubuğu -->
                                            <Border CornerRadius="6" Background="#FFF39B5E" HorizontalAlignment="Left">
                                                <Border.Width>
                                                    <!-- İlerleme genişliği Value, Minimum ve Maximum değerlerine göre -->
                                                    <MultiBinding Converter="{StaticResource ProgressWidthConverter}">
                                                        <Binding Path="Value" RelativeSource="{RelativeSource TemplatedParent}" />
                                                        <Binding Path="Minimum" RelativeSource="{RelativeSource TemplatedParent}" />
                                                        <Binding Path="Maximum" RelativeSource="{RelativeSource TemplatedParent}" />
                                                        <Binding Path="ActualWidth" RelativeSource="{RelativeSource TemplatedParent}" />
                                                    </MultiBinding>
                                                </Border.Width>
                                            </Border>
                                        </Grid>
                                    </ControlTemplate>
                                </ProgressBar.Template>
                            </ProgressBar>

                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Birleştirilmiş Cihaz Ayarları Paneli -->
                <Border Grid.Row="2" Grid.RowSpan="2" Grid.Column="3" Background="#F1F3FA" Margin="0 5 0 0"  VerticalAlignment="Top" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Width="220" HorizontalAlignment="Left">
                    <StackPanel Orientation="Vertical" Margin="3" Width="220" HorizontalAlignment="Left">

                        <!-- 1. BÖLÜM: EMITTER AYARLARI -->
                        <TextBlock Text="Emitter Ayarları" Foreground="#1A2849" FontSize="13" FontWeight="Bold" Margin="0 0 0 0"/>

                        <!-- Emitter Settings -->
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Interface.ChannelSettings.EmitterSettings, StringFormat={}{0:F0} Hz}" Foreground="#2E3B4E" FontSize="12" FontWeight="Bold" VerticalAlignment="Center" Width="100" TextAlignment="Center" Margin="0 0 0 0"/>
                        <Slider Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"  Value="{Binding Interface.ChannelSettings.EmitterSettings, Mode=TwoWay}" Minimum="1" Maximum="20" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left"/>

                        <Separator Margin="2 2" Width="220" HorizontalAlignment="Left"/>

                        <!-- 2. BÖLÜM: KANAL AYARLARI -->
                        <TextBlock Text="Kanal Ayarları" Foreground="#1A2849" FontSize="13" FontWeight="Bold" Margin="0 0 0 2" Width="220" HorizontalAlignment="Left"/>

                        <Grid HorizontalAlignment="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Başlıklar -->
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Gain" Foreground="#2E3B4E" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center" Margin="1 1"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="HP Filter" Foreground="#2E3B4E" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center" Margin="1 1"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="SPS" Foreground="#2E3B4E" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center" Margin="1 1"/>
                            <TextBlock Grid.Row="3" Grid.Column="2" Text="LP Filter" Foreground="#2E3B4E" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center" Margin="1 1"/>
                            <TextBlock Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2" Text="Size" Foreground="#2E3B4E" FontSize="11" FontWeight="Bold" Margin="1 1" HorizontalAlignment="Center"/>

                            <!-- Channel 0 -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Ch0 :" Foreground="#2E3B4E" FontSize="11" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Ch1 :" Foreground="#2E3B4E" FontSize="11" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            <ComboBox Grid.Row="1" Grid.Column="1" Width="65" Height="22" Margin="1 2" ItemsSource="{Binding Interface.GainOptions}" SelectedItem="{Binding Interface.ChannelSettings.Ch0.Gain}"/>
                            <ComboBox Grid.Row="1" Grid.Column="2" Width="65" Height="22" Margin="1 2" ItemsSource="{Binding Interface.HpFilterOptions}" SelectedItem="{Binding Interface.ChannelSettings.Ch0.HpFilter}"/>
                            <ComboBox Grid.Row="4" Grid.Column="1" Width="65" Height="22" Margin="1 2" ItemsSource="{Binding Interface.SPSOptions}" SelectedItem="{Binding Interface.ChannelSettings.Ch0.SPS}"/>
                            <ComboBox Grid.Row="4" Grid.Column="2" Width="65" Height="22" Margin="1 2" ItemsSource="{Binding Interface.LpFilterOptions}" SelectedItem="{Binding Interface.ChannelSettings.Ch0.LpFilter}"/>

                            <!-- Channel 1 -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Ch0 :" Foreground="#2E3B4E" FontSize="11" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Ch1 :" Foreground="#2E3B4E" FontSize="11" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            <ComboBox Grid.Row="2" Grid.Column="1" Width="65" Height="22" Margin="1 2" ItemsSource="{Binding Interface.GainOptions}" SelectedItem="{Binding Interface.ChannelSettings.Ch1.Gain}"/>
                            <ComboBox Grid.Row="2" Grid.Column="2" Width="65" Height="22" Margin="1 2" ItemsSource="{Binding Interface.HpFilterOptions}" SelectedItem="{Binding Interface.ChannelSettings.Ch1.HpFilter}"/>
                            <ComboBox Grid.Row="5" Grid.Column="1" Width="65" Height="22" Margin="1 2" ItemsSource="{Binding Interface.SPSOptions}" SelectedItem="{Binding Interface.ChannelSettings.Ch1.SPS}"/>
                            <ComboBox Grid.Row="5" Grid.Column="2" Width="65" Height="22" Margin="1 2" ItemsSource="{Binding Interface.LpFilterOptions}" SelectedItem="{Binding Interface.ChannelSettings.Ch1.LpFilter}"/>


                            <!-- Filtere Parametreleri -->
                            <TextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Text="RMS Window Size :" Margin="1 4" Foreground="#2E3B4E" FontSize="11" FontWeight="Bold" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                            <TextBlock Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Text="MAV Filter Size :" Margin="1 4" Foreground="#2E3B4E" FontSize="11" FontWeight="Bold" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                            <TextBox Grid.Row="7" Grid.Column="2" Width="80" Height="22" Margin="1 2" HorizontalAlignment="Left" Text="{Binding Interface.FilterSettings.RmsWindowSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBox Grid.Row="8" Grid.Column="2" Width="80" Height="22" Margin="1 2" HorizontalAlignment="Left" Text="{Binding Interface.FilterSettings.MavFilterSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>

                        <Separator Margin="2 2" Width="220" HorizontalAlignment="Left"/>

                        <!-- 3. BÖLÜM: GÖNDERME BUTONU -->
                        <Button Content="Tüm Ayarları Gönder" Command="{Binding SendSettingsCommand}" Margin="10 5" Width="200" HorizontalAlignment="Left"/>

                    </StackPanel>
                </Border>

                <!-- Sağ Panel (Grafik) -->
                <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Background="#F1F3FA" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" VerticalAlignment="Top" Height="300">
                    <plot:SensorPlot DataContext="{Binding Interface.SensorPlot.PlotModel}" Background="#F1F3FA" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Border>
                <Border Grid.Row="2" Grid.RowSpan="4" Grid.Column="1" Background="#F1F3FA" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" VerticalAlignment="Top" Height="300">
                    <plot:SensorPlot DataContext="{Binding Interface.CalculatedGasPlot.PlotModel}" Background="#F1F3FA" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Border>
                <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="3" Background="#F1F3FA" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" VerticalAlignment="Top" Height="300">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Kontroller -->
                            <RowDefinition Height="*"/>
                            <!-- Grafik -->
                        </Grid.RowDefinitions>

                        <!-- Kanal Seçim Kontrolleri -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                            <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                <TextBlock Text="CH1:" VerticalAlignment="Center" FontWeight="Bold" Foreground="#2E3B4E" Margin="0,0,5,0"/>
                                <ComboBox ItemsSource="{Binding Interface.AvailableSources}" 
                          SelectedItem="{Binding Interface.SelectedChannel1}"
                          Width="120" FontSize="11"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="CH2:" VerticalAlignment="Center" FontWeight="Bold" Foreground="#2E3B4E" Margin="0,0,5,0"/>
                                <ComboBox ItemsSource="{Binding Interface.AvailableSources}" 
                          SelectedItem="{Binding Interface.SelectedChannel2}"
                          Width="120" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Yeni Özel Grafik -->
                        <plot:SensorPlot Grid.Row="1" 
                         DataContext="{Binding Interface.CustomDualPlot.Model}" 
                         Background="#F1F3FA" 
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Stretch"/>
                    </Grid>
                </Border>

                <!-- Kalibrasyon Sonuçları -->
                <Border Grid.Row="2" Grid.RowSpan="4" Grid.Column="2" HorizontalAlignment="Stretch" Background="#F1F3FA" Margin="0" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" VerticalAlignment="Top">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                        <TextBlock Text="Kalibrasyon Verileri" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold"/>
                        <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1">
                            <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0 0 0 0">
                                <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="-----------------------------------------------------------------------" Foreground="#5C6D8C" FontSize="12" Width="180" Margin="0 0 5 0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="A: " Foreground="#5C6D8C" FontSize="12" Width="30" Margin="0 0 5 0"/>
                                        <TextBlock Text="{Binding Interface.DeviceData.CalibrationCoefficients.A, StringFormat={}{0:F9}}" Foreground="#FF231F1F" FontSize="12" Width="120" FontWeight="Bold" />
                                        <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="B: " Foreground="#5C6D8C" FontSize="12" Width="30" Margin="0 0 5 0"/>
                                        <TextBlock Text="{Binding Interface.DeviceData.CalibrationCoefficients.B, StringFormat={}{0:F9}}" Foreground="#FF231F1F" FontSize="12" Width="120" FontWeight="Bold" />
                                        <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="C: " Foreground="#5C6D8C" FontSize="12" Width="30" Margin="0 0 5 0"/>
                                        <TextBlock Text="{Binding Interface.DeviceData.CalibrationCoefficients.C, StringFormat={}{0:F9}}" Foreground="#FF231F1F" FontSize="12" Width="120" FontWeight="Bold" />
                                        <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="R: " Foreground="#5C6D8C" FontSize="12" Width="30" Margin="0 0 5 0"/>
                                        <TextBlock Text="{Binding Interface.DeviceData.CalibrationCoefficients.R, StringFormat={}{0:F6}}" Foreground="#FF231F1F" FontSize="12" Width="120" FontWeight="Bold" />
                                        <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="-----------------------------------------------------------------------" Foreground="#5C6D8C" FontSize="12" Width="180" Margin="0 0 5 0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="GasConcentration: " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                        <TextBlock Text="{Binding Interface.DeviceData.CalibrationData.GasConcentration, StringFormat={}{0:F6}}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="-----------------------------------------------------------------------" Foreground="#5C6D8C" FontSize="12" Width="180" Margin="0 0 5 0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Ref: " Foreground="#5C6D8C" FontSize="12" Width="30" Margin="0 0 5 0"/>
                                        <TextBlock Text="{Binding Interface.DeviceData.CalibrationData.Ref, StringFormat={}{0:F6}}" Foreground="#FF231F1F" FontSize="12" Width="120" FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Gas: " Foreground="#5C6D8C" FontSize="12" Width="30" Margin="0 0 5 0"/>
                                        <TextBlock Text="{Binding Interface.DeviceData.CalibrationData.Gas, StringFormat={}{0:F6}}" Foreground="#FF231F1F" FontSize="12" Width="120" FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="-----------------------------------------------------------------------" Foreground="#5C6D8C" FontSize="12" Width="180" Margin="0 0 5 0"/>
                                    </StackPanel>
