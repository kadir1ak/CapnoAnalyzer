<UserControl x:Class="CapnoAnalyzer.Views.DevicesViews.DevicesControl.DeviceCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CapnoAnalyzer.Views.DevicesViews.DevicesControl"           
             xmlns:plot="clr-namespace:CapnoAnalyzer.Views.DevicesViews.PlotViews"           
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d">

    <Grid Width="540" Margin="0">
        <!-- Ana Kart -->
        <Border Background="#F1F3FA" CornerRadius="10" Padding="5" BorderBrush="#D1D5DB" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Üst Bilgi (Cihaz Kimliği ve Durumu) -->
                <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0 0">
                    <Border Background="#F1F3FA" Margin="0 2 0 0" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10 0 0 0">
                                    <TextBlock Text="Port:" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold" Margin="0" />
                                    <TextBlock Text="{Binding Properties.PortName}" Foreground="#2E3B4E" FontSize="12" FontWeight="Bold" Margin="5 2 0 0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10 0 0 0" VerticalAlignment="Center">
                                    <TextBlock Text="ID:" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold" Margin="5 0 0 0" />
                                    <TextBlock Text="{Binding Properties.ProductId}" Foreground="#2E3B4E" FontSize="12" FontWeight="Bold" Margin="5 2 0 0" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5 0 0 0">
                                    <TextBlock Text="Baud Rate:" Foreground="#5C6D8C" FontSize="12" Margin="5 0 0 0" />
                                    <TextBlock Text="{Binding Properties.BaudRate}" Foreground="#5C6D8C" FontSize="11" Margin="5 2 0 0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5 0 0 0">
                                    <TextBlock Text="Cihaz Durumu:" Foreground="#5C6D8C" FontSize="12" Margin="5 0 0 0" />
                                    <TextBlock Text="{Binding Properties.Status}" Foreground="#5C6D8C" FontSize="11" Margin="5 2 0 0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5 0 0 0">
                                    <TextBlock Text="Veri Paketi Modu:" Foreground="#5C6D8C" FontSize="12" Margin="5 0 0 0" />
                                    <TextBlock Text="{Binding Properties.DataPacketType}" Foreground="#5C6D8C" FontSize="11" Margin="5 2 0 0" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>    
                </StackPanel>

                <!-- Sol Panel (Sensör Verileri) -->
                <StackPanel Grid.Row="0" Grid.RowSpan="4" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <!-- Zaman -->
                    <Border Background="#F1F3FA" Height="80" Margin="2" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                            <TextBlock Text="Zaman" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold" />
                            <TextBlock Text="{Binding Interface.Data.Time}" Foreground="#0078D7" FontSize="18" FontWeight="Bold" />
                            <TextBlock Text="sn" Foreground="#5C6D8C" FontSize="12" />
                        </StackPanel>
                    </Border>

                    <!-- Gaz Sensörü -->
                    <Border Background="#F1F3FA" Height="80" Margin="2" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                            <TextBlock Text="Gaz Sensörü" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold" />
                            <TextBlock Text="{Binding Interface.Data.GasSensor}" Foreground="#4CAF50" FontSize="18" FontWeight="Bold" />
                            <TextBlock Text="ADC" Foreground="#5C6D8C" FontSize="12" />
                        </StackPanel>
                    </Border>

                    <!-- Referans Sensörü -->
                    <Border Background="#F1F3FA" Height="80" Margin="2" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                            <TextBlock Text="Referans Sensör" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold" />
                            <TextBlock Text="{Binding Interface.Data.ReferenceSensor}" Foreground="#FF5722" FontSize="18" FontWeight="Bold" />
                            <TextBlock Text="ADC" Foreground="#5C6D8C" FontSize="12" />
                        </StackPanel>
                    </Border>


                    <!-- Ortam Sensörleri -->
                    <Border Background="#F1F3FA" Height="80" Margin="2" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                            <TextBlock Text="Ortam Sensörleri" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Basınç" Foreground="#5C6D8C" FontSize="12" Width="40" Margin="0 0 5 0"/>
                                <TextBlock Text="{Binding Interface.Data.Pressure, StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="60" FontWeight="Bold" />
                                <TextBlock Text="hPa" Foreground="#5C6D8C" FontSize="12" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Sıcaklık" Foreground="#5C6D8C" FontSize="12" Width="40" Margin="0 0 5 0"/>
                                <TextBlock Text="{Binding Interface.Data.Temperature, StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="60" FontWeight="Bold" />
                                <TextBlock Text="°" Foreground="#5C6D8C" FontSize="12" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Nem " Foreground="#5C6D8C" FontSize="12" Width="40" Margin="0 0 5 0"/>
                                <TextBlock Text="{Binding Interface.Data.Humidity, StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="60" FontWeight="Bold" />
                                <TextBlock Text="%" Foreground="#5C6D8C" FontSize="12" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Sağ Panel (Grafik) -->
                <Border Grid.Row="1" Grid.Column="1" Background="#F1F3FA" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" VerticalAlignment="Top" Height="300">
                    <plot:SensorPlot DataContext="{Binding Interface.SensorPlot.PlotModel}" Background="#F1F3FA" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Border>

                <!-- Alt Bilgi (Cihaz Ayarları) -->
                <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Background="#F1F3FA" Margin="0" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" VerticalAlignment="Top">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0"  Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5 0 0 0">
                            <!-- İlk Slider -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0">
                                <TextBlock Text="Emitter ON time (ms):" VerticalAlignment="Center"
               Foreground="#2E3B4E" 
               FontSize="12" 
               FontWeight="Bold" 
               Margin="0" 
               Width="150"/>
                                <!-- Slider Değerini Gösteren TextBlock -->
                                <TextBlock Text="{Binding ElementName=EmitterOnSlider, Path=Value}" 
               Foreground="#2E3B4E" 
               FontSize="12"   VerticalAlignment="Center"
               FontWeight="Bold" 
               Width="30" 
               Margin="5 2 0 0" />
                                <!-- Slider -->
                                <Slider x:Name="EmitterOnSlider" 
                            Minimum="0" 
                            Maximum="100" 
                            Value="50" 
                            TickFrequency="10" 
                            IsSnapToTickEnabled="True" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Margin="0 2" 
                            Width="180"/>
                            </StackPanel>

                            <!-- İkinci Slider -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0">
                                <TextBlock Text="Emitter OFF time (ms):" VerticalAlignment="Center"
                                           Foreground="#2E3B4E" 
                                           FontSize="12" 
                                           FontWeight="Bold" 
                                           Margin="0" 
                                           Width="150"/>
                                <!-- Slider Değerini Gösteren TextBlock -->
                                <TextBlock Text="{Binding ElementName=EmitterOffSlider, Path=Value}" 
                                           Foreground="#2E3B4E" 
                                           FontSize="12"  VerticalAlignment="Center"
                                           FontWeight="Bold" 
                                           Width="30" 
                                           Margin="5 2 0 0" />
                                <!-- Slider -->
                                <Slider x:Name="EmitterOffSlider" 
                                        Minimum="0" 
                                        Maximum="100" 
                                        Value="50" 
                                        TickFrequency="10" 
                                        IsSnapToTickEnabled="True" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center" 
                                        Margin="0 2" 
                                        Width="180"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top">
                            <Grid Grid.Row="1" Grid.RowSpan="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="0" HorizontalAlignment="Left">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                    <!-- Channel Configuration -->
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Gain" Foreground="#2E3B4E" FontSize="12" FontWeight="Bold" VerticalAlignment="Center" Margin="5"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="HP Filter"  Foreground="#2E3B4E" FontSize="12" FontWeight="Bold" VerticalAlignment="Center" Margin="5"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="Trans" Foreground="#2E3B4E" FontWeight="Bold" FontSize="12" VerticalAlignment="Center" Margin="5"/>
                                <TextBlock Grid.Row="0" Grid.Column="4" Text="LP Filter" Foreground="#2E3B4E" FontWeight="Bold" FontSize="12" VerticalAlignment="Center" Margin="5"/>

                                <!-- Channel 0 -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Ch0 : " Foreground="#2E3B4E" FontWeight="Bold" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
                                <ComboBox Grid.Row="1" Grid.Column="1" Width="50" Margin="5">
                                    <ComboBoxItem Content="16" IsSelected="True"/>
                                    <ComboBoxItem Content="8"/>
                                    <ComboBoxItem Content="4"/>
                                </ComboBox>
                                <ComboBox Grid.Row="1" Grid.Column="2" Width="80" Margin="5">
                                    <ComboBoxItem Content="1Hz" IsSelected="True"/>
                                    <ComboBoxItem Content="10Hz"/>
                                    <ComboBoxItem Content="100Hz"/>
                                </ComboBox>
                                <ComboBox Grid.Row="1" Grid.Column="3" Width="80" Margin="5">
                                    <ComboBoxItem Content="0.15T" IsSelected="True"/>
                                    <ComboBoxItem Content="0.2T"/>
                                    <ComboBoxItem Content="0.3T"/>
                                </ComboBox>
                                <ComboBox Grid.Row="1" Grid.Column="4" Width="80" Margin="5">
                                    <ComboBoxItem Content="180Hz" IsSelected="True"/>
                                    <ComboBoxItem Content="200Hz"/>
                                    <ComboBoxItem Content="220Hz"/>
                                </ComboBox>

                                <!-- Channel 1 -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Ch1 : " Foreground="#2E3B4E" FontSize="12" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
                                <ComboBox Grid.Row="2" Grid.Column="1" Width="50" Margin="5">
                                    <ComboBoxItem Content="16" IsSelected="True"/>
                                    <ComboBoxItem Content="8"/>
                                    <ComboBoxItem Content="4"/>
                                </ComboBox>
                                <ComboBox Grid.Row="2" Grid.Column="2" Width="80" Margin="5">
                                    <ComboBoxItem Content="1Hz" IsSelected="True"/>
                                    <ComboBoxItem Content="10Hz"/>
                                    <ComboBoxItem Content="100Hz"/>
                                </ComboBox>
                                <ComboBox Grid.Row="2" Grid.Column="3" Width="80" Margin="5">
                                    <ComboBoxItem Content="0.15T" IsSelected="True"/>
                                    <ComboBoxItem Content="0.2T"/>
                                    <ComboBoxItem Content="0.3T"/>
                                </ComboBox>
                                <ComboBox Grid.Row="2" Grid.Column="4" Width="80" Margin="5">
                                    <ComboBoxItem Content="180Hz" IsSelected="True"/>
                                    <ComboBoxItem Content="200Hz"/>
                                    <ComboBoxItem Content="220Hz"/>
                                </ComboBox>
                            </Grid>
                        </StackPanel>                      
                    </Grid>   
                </Border>

                <!-- DataPacket_1 Verileri  -->
                <Border  Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"  Background="#F1F3FA" Margin="0" VerticalAlignment="Top" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Visibility="{Binding Interface.Data.DataPacket_1_Status}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                        <TextBlock Text="Tüm Cihaz Verileri" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Time " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.Time, StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="GasSensor " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.GasSensor, StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ReferenceSensor " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.ReferenceSensor, StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Temperature " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.Temperature, StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Humidity " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.Humidity, StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Pressure " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.Pressure, StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- DataPacket_2 Verileri  -->          
                <Border  Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"  Background="#F1F3FA" Margin="0" VerticalAlignment="Top" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Visibility="{Binding Interface.Data.DataPacket_2_Status}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                        <TextBlock Text="Tüm Cihaz Verileri" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ti " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.Time, StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="irStatus " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.IrStatus, StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="angVoltages[0] " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.AngVoltages[0], StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="angVoltages[1] " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.AngVoltages[1], StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="angVoltages[2] " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.AngVoltages[2], StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="adsRawValues[0] " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.AdsRawValues[0], StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="adsRawValues[1]" Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.AdsRawValues[1], StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="adsRawValues[2] " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.AdsRawValues[2], StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="adsRawValues[3] " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.AdsRawValues[3], StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="adsVoltages[0] " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.AdsVoltages[0], StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="adsVoltages[1]" Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.AdsVoltages[1], StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="adsVoltages[2] " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.AdsVoltages[2], StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="adsVoltages[3] " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.AdsVoltages[3], StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="adsVoltagesF[2] " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.GainAdsVoltagesF[0], StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
                                    <TextBlock Text=" " Foreground="#5C6D8C" FontSize="12" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="adsVoltagesF[3] " Foreground="#5C6D8C" FontSize="12" Width="100" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding Interface.Data.GainAdsVoltagesF[1], StringFormat=F2}" Foreground="#FF231F1F" FontSize="12" Width="80" FontWeight="Bold" />
