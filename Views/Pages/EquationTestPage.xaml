<Page x:Class="CapnoAnalyzer.Views.Pages.EquationTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CapnoAnalyzer.Views.Pages"
      xmlns:oxy="http://oxyplot.org/wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EquationTestPage">

    <Grid Margin="20">
        <Border Background="#F1F3FA" CornerRadius="10" Padding="15" BorderBrush="#D1D5DB" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <!-- Üst Bilgi -->
                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="📱 Denklem" FontSize="24" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Sol Panel -->
                <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,0,10,0">
                    <!-- Örnek Veriler -->
                    <GroupBox Header="Örnek Veriler" Margin="0,0,0,15" Padding="10">
                        <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" Height="300" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                    </GroupBox>

                    <!-- Denklem ve Katsayılar -->
                    <GroupBox Header="Model ve Katsayılar" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Model: y = a(1 - e^(-b * x^c))" FontWeight="Bold" Margin="0,0,0,10" />
                            <TextBlock x:Name="txtParameterA" Text="a: " FontSize="14" Margin="0,0,0,5" />
                            <TextBlock x:Name="txtParameterB" Text="b: " FontSize="14" Margin="0,0,0,5" />
                            <TextBlock x:Name="txtParameterC" Text="c: " FontSize="14" Margin="0,0,0,5" />
                        </StackPanel>
                    </GroupBox>
                </StackPanel>

                <!-- Sağ Panel (Grafik) -->
                <Border Grid.Row="1" Grid.Column="1" Background="#FFFFFF" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Margin="10" Padding="20">
                    <oxy:PlotView x:Name="plotView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>