<Page x:Class="CapnoAnalyzer.Views.Pages.EquationTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CapnoAnalyzer.Views.Pages"
      xmlns:oxy="http://oxyplot.org/wpf"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="EquationTestPage">

    <Grid Margin="20">
        <Border Background="#F1F3FA" CornerRadius="10" Padding="15"
                BorderBrush="#D1D5DB" BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <!-- Üst Başlık -->
                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,0,0,10">
                    <TextBlock Text="📱 Denklemler" FontSize="24" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Sol Panel -->
                <ScrollViewer Grid.Row="1" Grid.Column="0" Margin="10,0,10,0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <!-- Cihaz 1 Veriler -->
                        <GroupBox Header="Cihaz 1 Veriler" Margin="0,0,0,10" Padding="10">
                            <DataGrid x:Name="dataGrid1"
                                      AutoGenerateColumns="True"
                                      Height="200"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Top" />
                        </GroupBox>

                        <!-- Cihaz 2 Veriler -->
                        <GroupBox Header="Cihaz 2 Veriler" Margin="0,0,0,10" Padding="10">
                            <DataGrid x:Name="dataGrid2"
                                      AutoGenerateColumns="True"
                                      Height="200"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Top" />
                        </GroupBox>

                        <!-- Cihaz 3 Veriler -->
                        <GroupBox Header="Cihaz 3 Veriler" Margin="0,0,0,10" Padding="10">
                            <DataGrid x:Name="dataGrid3"
                                      AutoGenerateColumns="True"
                                      Height="200"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Top" />
                        </GroupBox>

                        <!-- Cihaz 4 Veriler -->
                        <GroupBox Header="Cihaz 4 Veriler" Margin="0,0,0,10" Padding="10">
                            <DataGrid x:Name="dataGrid4"
                                      AutoGenerateColumns="True"
                                      Height="200"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Top" />
                        </GroupBox>
                        
                        <!-- Model ve Katsayılar (Cihaz 1) -->
                        <GroupBox Header="Model ve Katsayılar (Cihaz 1)" Margin="0,0,0,10" Padding="10">
                            <StackPanel>
                                <TextBlock x:Name="txtCihaz1_Model" Text="Model: y = a(1 - e^(-b x^c))" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtCihaz1A" Text="a:" FontSize="14" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtCihaz1B" Text="b:" FontSize="14" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtCihaz1C" Text="c:" FontSize="14" Margin="0,0,0,5"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Model ve Katsayılar (Cihaz 2) -->
                        <GroupBox Header="Model ve Katsayılar (Cihaz 2)" Margin="0,0,0,10" Padding="10">
                            <StackPanel>
                                <TextBlock x:Name="txtCihaz2_Model" Text="Model: y = a(1 - e^(-b x^c))" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtCihaz2A" Text="a:" FontSize="14" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtCihaz2B" Text="b:" FontSize="14" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtCihaz2C" Text="c:" FontSize="14" Margin="0,0,0,5"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Model ve Katsayılar (Cihaz 3) -->
                        <GroupBox Header="Model ve Katsayılar (Cihaz 3)" Padding="10">
                            <StackPanel>
                                <TextBlock x:Name="txtCihaz3_Model" Text="Model: y = a(1 - e^(-b x^c))" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtCihaz3A" Text="a:" FontSize="14" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtCihaz3B" Text="b:" FontSize="14" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtCihaz3C" Text="c:" FontSize="14" Margin="0,0,0,5"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Model ve Katsayılar (Cihaz 4) -->
                        <GroupBox Header="Model ve Katsayılar (Cihaz 4)" Padding="10">
                            <StackPanel>
                                <TextBlock x:Name="txtCihaz4_Model" Text="Model: y = a(1 - e^(-b x^c))" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtCihaz4A" Text="a:" FontSize="14" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtCihaz4B" Text="b:" FontSize="14" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtCihaz4C" Text="c:" FontSize="14" Margin="0,0,0,5"/>
                            </StackPanel>
                        </GroupBox>


                    </StackPanel>
                </ScrollViewer>

                <!-- Sağ Panel (Grafik) -->
                <Border Grid.Row="1" Grid.Column="1"
                        Background="#FFFFFF"
                        CornerRadius="10"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        Margin="10"
                        Padding="20">
                    <oxy:PlotView x:Name="plotView"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"/>
                </Border>

            </Grid>
        </Border>
    </Grid>
</Page>
