<Page x:Class="CapnoAnalyzer.Views.Pages.NotesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CapnoAnalyzer.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NotesPage">

    <Grid Margin="20">
        <Border Background="#F1F3FA" CornerRadius="10" Padding="15" BorderBrush="#D1D5DB" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <!-- Üst Bilgi -->
                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="ℹ️  Notlar" FontSize="24" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,10">
                    <Border Background="#F1F3FA" Margin="10" CornerRadius="10">
                        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <TextBlock Text="Cihaza veri gönderimi" Foreground="#2E3B4E" FontSize="14" FontWeight="Bold" />
                            <TextBlock Text="-Mode:Cihazın Mod Değeri:SP:Cihazın Örnemleme Hızı(ms):Emitter:Cihazın Işığı Açma/Kapama Toggle Süresi(ms)" Foreground="#2E3B4E" FontSize="12" FontWeight="Bold" />
                            <TextBlock Text="-Örnek Kullanım: Mode:4;SP:1;Emitter:50;" Foreground="#4CAF50" FontSize="12" FontWeight="Bold" />
                        </StackPanel>
                    </Border>
                </StackPanel>



            </Grid>
        </Border>
    </Grid>
</Page>
